@model InventoryManagementSystem.Models.Product

@{
    ViewBag.Title = "DeleteProduct";
}

<h2>Delete Product</h2>

<h3 class="text-danger">Are you sure you want to delete this?</h3>
<div>
    <h4>Product Details</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Product Name")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Product_name)
        </dd>

        <dt>
            @Html.DisplayName("Product Price")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Product_price)
        </dd>

        <dt>
            @Html.DisplayName("Product Quentity")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Product_qnty)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            @Html.ActionLink("Cancel", "DisplayProduct", "Product", new {@class="btn btn-primary"})
        </div>
    }
</div>
